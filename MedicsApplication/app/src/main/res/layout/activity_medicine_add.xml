<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddMedicineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp">
    <ImageView
        android:id="@+id/medicine_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_menu_gallery" />

    <EditText
        android:id="@+id/medicine_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter medicine name"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/medicine_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter medicine description" />

    <EditText
        android:id="@+id/medicine_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter medicine quantity" />

    <EditText
        android:id="@+id/medicine_mfg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Manufacturer name" />

    <EditText
        android:id="@+id/medicine_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Medicine form" />

    <EditText
        android:id="@+id/medicine_benefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Medicine benefits" />

    <EditText
        android:id="@+id/medicine_mrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Price" />

    <EditText
        android:id="@+id/medicine_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Discount" />

    <EditText
        android:id="@+id/medicine_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter medicine rating" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@color/ic_launcher_background"
        android:text="Submit" />
    </LinearLayout>

</ScrollView>