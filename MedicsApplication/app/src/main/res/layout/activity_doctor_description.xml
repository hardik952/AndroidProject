<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Activities.DoctorDescription">

    <ImageView
        android:id="@+id/thumb_doc"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="start"
        android:src="@drawable/doc1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/d_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Dr. Marcus Cori"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/thumb_doc"
        app:layout_constraintTop_toTopOf="@+id/thumb_doc" />

    <TextView
        android:id="@+id/d_speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardiologist"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/d_name"
        app:layout_constraintTop_toBottomOf="@+id/d_name" />

    <LinearLayout
        android:id="@+id/rate_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_linear_layout"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/d_speciality"
        app:layout_constraintTop_toBottomOf="@+id/d_speciality">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_24" />

        <TextView
            android:id="@+id/tv_rating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:textColor="@color/splashBg"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/rate_layout"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/rate_layout"
        app:layout_constraintTop_toBottomOf="@+id/rate_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locationpin"
            app:tint="@color/nav_icon" />

        <TextView
            android:id="@+id/tv_distance3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="800m away"
            android:textColor="@color/nav_icon"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="About "
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thumb_doc" />

    <TextView
        android:id="@+id/doc_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dr. G Vivek is currently working as Consultant Adult and Pediatric Interventional Cardiologist at kauvery Hospital electronic city, Bengaluru. He is skilled in Adult and pediatric - coronary and peripheral, structural heart disease and pacemakers including CRT .He has experience in IVUS, Rotablation and FFR guided.interventions. He is also actively involved in research both non industry and industry sponsored. He has 60 publications in PUBMED indexed journals."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/at"
        app:layout_constraintTop_toBottomOf="@+id/at" />

    <TextView
        android:id="@+id/clinic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Implus Hospital"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/doc_info"
        app:layout_constraintTop_toBottomOf="@+id/doc_info" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="4th floor, Sahaj Icon, Adajan, Surat."
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/clinic_name"
        app:layout_constraintTop_toBottomOf="@+id/clinic_name" />

    <TextView
        android:id="@+id/fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="$900 consultation fees at clinic"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+91 9586624509"
        android:textColor="@color/etText"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/light_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fees" />

    <ImageView
        android:id="@+id/iv_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/fees"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:srcCompat="@drawable/baseline_calendar_month_34" />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="Select Date"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cal"
        app:layout_constraintStart_toEndOf="@+id/iv_cal"
        app:layout_constraintTop_toTopOf="@+id/iv_cal" />

    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/iv_cal"
        app:layout_constraintTop_toBottomOf="@+id/iv_cal"
        app:srcCompat="@drawable/baseline_access_time_34" />

    <EditText
        android:id="@+id/et_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="Select Time"
        app:layout_constraintBottom_toBottomOf="@+id/iv_clock"
        app:layout_constraintStart_toEndOf="@+id/iv_clock"
        app:layout_constraintTop_toTopOf="@+id/iv_clock" />

    <TextView
        android:id="@+id/tv_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday - Friday"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_date" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="10:00 - 5:00"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_days"
        app:layout_constraintTop_toBottomOf="@+id/tv_days" />

    <LinearLayout
        android:id="@+id/layout_book_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ic_launcher_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Book Appointment"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
